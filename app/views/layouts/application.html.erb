<!DOCTYPE html>
<html>
<head>
  <title>Tackitup</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/boards"><span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span>TackItUp</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <form class="navbar-form navbar-right">

            <% if current_user %>
              <%= link_to 'Signout', destroy_user_session_path, class: "btn btn-danger", :method => :delete  %>
            <% else %>
            <!-- <div class="form-group">
              <input type="text" placeholder="Email" class="form-control">
            </div>
            <div class="form-group">
              <input type="password" placeholder="Password" class="form-control">
            </div> -->
              <%= link_to 'Signup', new_user_registration_path, class: "btn btn-success" %>
              <%= link_to 'Login', new_user_session_path, class: "btn btn-primary" %>
            <% end %>
          </form>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>


    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron text-center">
      <div class="container">
        <div class="well">
            <h1>TackItUp</h1>
            <p>Sexy pins only please!</p>

            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>

            <%= yield %>

        </div>
      </div>
    </div>

</body>
</html>
