<% if current_user %>
    <% if current_user.id == @board.user_id %>
      <%= link_to 'Add pin', new_board_pin_path(@board), class: 'btn btn-primary mobile-style' %>
      <%= link_to 'Edit board', edit_board_path, class: 'btn btn-info mobile-style' %>
      <%= link_to 'Delete board', board_path, class: 'btn btn-danger mobile-style', method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    <% end %>
<% end %>

<div class="well board-background">
  <h2><%= @board.title %></h2>

  <p><%= @board.user.email %></p>
<div class="row">
  <% @board.pins.each do |pin| %>
  <div class="col-md-4">
    <div class="well pin-background">
      <h2><%=pin.title%></h2>
          <%= link_to(image_tag(pin.image_url), board_pin_path(@board, pin)) %>
      </div>
    </div>
  <% end %>
  </div>
  <%= link_to 'Back', boards_path, class: 'btn btn-warning' %>

</div>
